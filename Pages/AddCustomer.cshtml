@page
@model WebApplication1.Pages.AddCustomerModel
@{
    Layout = "_Layout";
}

<br>
<h1>Оформление заказа</h1>
<br>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-1">
        <label class="col-sm-1  col-form-label">Имя</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="Имя" name="Name" value="@Model.customer.Name">
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-sm-1  col-form-label">Фамилия</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="Фамилия" name="Surname" value="@Model.customer.Surname">
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-sm-1  col-form-label">Номер</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="Номер телефона" name="Number" value="@Model.customer.Number">
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-sm-1  col-form-label">Почта</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="Почта" name="Email" value="@Model.customer.Email">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    <div class="row mb-1">
        <div class="offset-sm-1 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Завершить заказ</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/HomePage" role="button">Отмена</a>
        </div>
    </div>
</form>